<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModelViewActivity">
    <LinearLayout
        android:id="@+id/id_linear_vert_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bordo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705">

        <TextView
            android:id="@+id/id_titolo_questionario"
            android:layout_width="260dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bordo"
            android:gravity="center"
            android:text="@string/titolo_questionario"
            tools:text="titolo questionario" />

        <include layout="@layout/bottoni">

        </include>

        <Button
            android:id="@+id/jd_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordo"
            android:text="Next" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>